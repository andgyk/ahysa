{
    "$schema": "https://json.schemastore.org/coffeelint.json",
    "arrow_spacing": {
        "level": "error"
    },
    "camel_case_classes": {
        "level": "error"
    },
    "no_backticks": {
        "level": "error"
    },
    "no_this": {
        "level":"error"
    },
    "no_trailing_semicolons": {
        "level": "warn"
    },
    "prefer_english_operator": {
        "level": "warn"
    },
    "braces_spacing": {
        "level": "error",
        "spaces": 1
    },
    "colon_assignment_spacing": {
        "level": "warn",
        "spacing": {
            "left": 0,
            "right": 1
        }
    },
    "indentation": {
        "level": "error",
        "value": 4
    },
    "spacing_after_comma": {
        "level": "error"
    },
    "no_interpolation_in_single_quotes": {
        "level": "error"
    },
    "max_line_length": {
        "level": "warn",
        "value": 180,
        "limitComments": false
    }
}